<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f2f2f2"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/app_basic"
        android:orientation="horizontal">

        <!--<ImageView-->
            <!--android:id="@+id/logn_img"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:padding="10dp"-->
            <!--android:src="@drawable/jt" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="会员中心"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <ScrollView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#f2f2f2"
        android:fillViewport="true"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f2f2f2"
            >

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_basic"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                >

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/mine_head"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/home_head"
                    app:riv_corner_radius="50dp"
                    app:riv_border_width="0dp"
                    app:riv_border_color="@color/white"
                    />

                <TextView
                    android:id="@+id/mine_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="点击登录"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    />


            </LinearLayout>



            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp"
                android:id="@+id/mine_order"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的订单"
                    android:layout_marginLeft="12dp"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="12dp"
                    android:textColor="#999999"
                    android:textSize="18sp"
                    />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/arrow02"
                    android:layout_marginLeft="5dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#eeeeee"/>

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:id="@+id/mine_pid"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推广PID"
                    android:layout_marginLeft="12dp"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/mine_pid_txt"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="29601627_22206034_73840212"
                    android:layout_marginLeft="12dp"
                    android:textColor="#999999"
                    android:textSize="15sp"
                    android:lines="1"
                    />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/arrow02"
                    android:layout_marginLeft="5dp"
                    />

            </LinearLayout>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:id="@+id/mine_logout"
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="退出登录"
                    android:layout_marginLeft="12dp"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    />

            </LinearLayout>




        </LinearLayout>


    </ScrollView>

</LinearLayout>